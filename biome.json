{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": []
	},
	"formatter": {
        "ignore": ["node_modules", ".next", "packages/tsconfig"],
        "enabled": true,
        "indentStyle": "tab"
    },
	"organizeImports": {
		"enabled": true
	},
	"linter": {
        "ignore": ["node_modules", ".next", "packages/tsconfig"],
        "enabled": true,
        "rules": {
            "recommended": true,
            "suspicious": {
				"noExplicitAny": "off"
			}
        }
    },
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	}
}
